<%= render partial: "layouts/merchant_header", locals: {merchant: @merchant} %>

<h1><%= @merchant.name %> Discounts</h1>
<%= button_to "Create New Discount", new_merchant_bulk_discount_path(@merchant), method: :get %>
<br>
<div class="container px-0">
  <div class="row gx-5">
    <div class="col">
     <div class="p-3 border bg-light" id="ready-to-ship"><h3>Bulk Discounts</h3>
       <br>
       <table class="table table-striped table-sm" id="enabled-items">
         <tbody>
           <tr>
             <th>Name</th>
             <th>Discount</th>
             <th>Minimum Quantity</th>
           </tr>
           <% @bulk_discounts.each do |discount| %>
           <tr id="discount-<%= discount.id %>">
             <td><%= link_to discount.name, merchant_bulk_discount_path(@merchant, discount) %></td>
             <td><%= number_to_percentage(discount.percentage, :precision => 0) %></td>
             <td><%= discount.threshold %></td>
             </tr>
           <% end %>
         </tbody>
       </table>
     </div>
    </div>
    <div class="col">
     <div class="p-3 border bg-light" id="ready-to-ship"><h3>Upcoming Holidays</h3>
       <br>
       <table class="table table-striped table-sm" id="enabled-items">
         <tbody>
           <tr>
             <th>Holiday</th>
             <th>Date</th>
           </tr>
           <% @holidays = holidays %>
           <% @holidays.each do |holiday| %>
           <tr>
             <td><%= holiday.name %></td>
             <td><%= holiday.date %></td>
             </tr>
           <% end %>
         </tbody>
       </table>
     </div>
    </div>
  </div>
</div>
