<%= form_with model: model, method: method, local: true do |f| %>
  <%= f.label :name, "Name"%><br/>
  <%= f.text_field :name %><br/>
  <%= f.label :discount, "Discount" %><br/>
  <%= f.number_field :discount, step: 0.01 %><br/>
  <%= f.label :threshold, "Minimum Quantity" %><br/>
  <%= f.number_field :threshold %><br/>
  <%= f.hidden_field :merchant_id, value: @merchant.id %>
  <%= f.submit "Submit" %>
<% end %>
